<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body class="hb-bg">
  <%- include('partials/header') %>

  <main class="container py-5">
    <div class="d-flex justify-content-between align-items-end mb-4">
      <div>
        <h1 class="fw-bold">Our Menu</h1>
        <p class="text-muted mb-0">Coffee, tea & pastries brewed fresh daily.</p>
      </div>
      <a href="/" class="btn btn-outline-secondary">Back to Home</a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
      <% (products || []).forEach(p => { %>
        <div class="col">
          <div class="card h-100 border-0 shadow-sm">
            <img src="<%= p.image %>" class="card-img-top" alt="<%= p.name %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-1"><%= p.name %></h5>
              <p class="card-text text-muted flex-grow-1"><%= p.description %></p>
              <div class="mt-2">
                <button class="btn btn-brand-outline w-100 details-btn" data-product-id="<%= p.id %>">
                  Show Price & Availability
                </button>
              </div>
              <div class="details mt-3 d-none" id="details-<%= p.id %>">
                <div class="alert alert-info mb-0">
                  <strong>Price:</strong> $<span class="price">--</span> Â·
                  <strong>In Stock:</strong> <span class="stock">--</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
